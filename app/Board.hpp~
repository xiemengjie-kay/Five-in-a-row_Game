#ifndef BOARD_HPP
#define BOARD_HPP

#include <string>


class Board
{
public:
  Board(unsigned int row, unsigned int column):row{row}, column{column}{}

  ~Board() noexcept  = default;

  unsigned int get_row(){ return row;}

  unsigned int get_column(){ return column;};

  std::string get_current_board();
  
private:
  unsigned int row;
  unsigned int column;

};



#endif
